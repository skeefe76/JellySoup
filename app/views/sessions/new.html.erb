<header>
  <h1>Sign In</h1>
</header>
<%= form_tag(session_path) do %>
  <fieldset>
    <ol>
      <li>
        <%= label_tag :email %>
        <%= email_field_tag :email, nil, required: true %>
      </li>
      <li>
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, required: true %>
        <%= link_to "(forgot password)", new_password_reset_path %>
      </li>
    </ol>
    <p>
      <%= submit_tag 'Sign In' %>
    </p>
  </fieldset>
  <p>
    No account yet? <%= link_to 'Sign up!', signup_path %>
  </p>
<% end %>
